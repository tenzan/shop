<div id="product">
  <header>
    <h1><%= @category.name %></h1>
  </header>
  <header>
    <h2><%= @product.name %></h2>

    <ul class="actions">
      <li><%= link_to "Edit Product", [:edit, @category, @product], class: "edit" %></li>
      <li><%= link_to "Delete Product", [@category, @product], method: :delete,
              data: { confirm: "Are you sure you want to delete this product?"},
              class: "delete" %></li>
    </ul>

  </header>
  <%= simple_format(@product.description) %>
  <%= @product.price %>
  <%= image_tag(@product.image_url.to_s) %>
</div>
