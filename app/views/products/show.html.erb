<div id="product">
  <header>
    <h1><%= @category.name %></h1>
  </header>
  <header>
    <h2><%= @product.name %></h2>

    <% admins_only do %>
    <ul class="actions">
      <li><%= link_to "Edit Product",
              edit_admin_category_product_path([@category, @product]),
              class: "edit" %></li>
      <li><%= link_to "Delete Product", admin_category_product_path([@category, @product]), method: :delete,
              data: { confirm: "Are you sure you want to delete this product?"},
              class: "delete" %></li>
    </ul>
    <% end %>
    
  </header>
  <table id="attributes">
    <tr>
      <th>Author:</th>
      <td><%= @product.author.email %></td>
   </tr>
   <tr>
     <th>Created:</th>
     <td><%= time_ago_in_words(@product.created_at) %> ago</td>
   </tr>
  </table>
  <%= simple_format(@product.description) %>
  <%= @product.price %>
  <%= image_tag(@product.image_url.to_s) %>
</div>
