<header>
  <h1><%= @category.name %></h1>

  <% admins_only do %>
  <ul class="actions">

    <li><%= link_to "Edit Category",
        edit_admin_category_path(@category), class: 'edit' %></li>
    <li><%= link_to "Delete Category", admin_category_path(@category),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this category?" },
      class: 'delete' %></li>
    </ul>
    <% end %>
</header>

<header>
  <h2>Products</h2>

  <% admins_only do %>
  <ul class="actions">
    <li><%= link_to "New Product", new_admin_category_product_path(@category),
      class: "new" %></li>
  </ul>
  <% end %>
</header>

  <table class="table table-striped">
    <thead>
      <th>#</th>
      <th>name</th>
      <th>image</th>
      <th>description</th>
      <th>price</th>
    </thead>

  <tbody>
    <% @category.products.each_with_index do |product, index| %>
    <tr>
      <td> <%= index+1 %> </td>
      <td> <%= link_to product.name, [@category, product] %> </td>
      <td> <%= image_tag(product.image_url(:thumb).to_s) %> </td>
      <td> <%= product.description %> </td>
      <td> <%= product.price %> </td>
    </tr>
    <% end %>
  </tbody>
  </table>
