<div class="page-header">
  <h1><%= @category.name %></h1>

  <ul class="actions">
    <li><%= link_to fa_icon("pencil") + " Edit Category",
            edit_category_path(@category), class: "btn btn-primary"  %></li>

    <li><%= link_to fa_icon("trash") + " Delete Category",
       category_path(@category),
       method: :delete,
       data: { confirm: "Are you sure you want to delete this category?" },
        class: "btn btn-danger" %></li>
  </ul>
</div>
